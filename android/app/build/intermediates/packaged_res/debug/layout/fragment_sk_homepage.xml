<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SKHomepageFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MainTheme_color">

        <ScrollView
            android:layout_width="411dp"
            android:layout_height="194dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sk_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:shadowColor="@color/sk_text"
                    android:text=""
                    android:textColor="@color/sk_text"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_sk_phone"
                    android:layout_width="238dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sk_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sk_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:text="營業時間"
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeMon"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeTue"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeWed"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Thur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeThur"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeThur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeFri"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeSat"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sk_Sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/SKtimeSun"
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sk_timeSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/sk_text"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_sk_shopIcon"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/zhujian" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_sk_modifyInfo"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@null"
            android:background="#E87B17"
            android:drawableLeft="@drawable/button_drawable"
            android:text="修改資訊"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <Button
            android:id="@+id/btn_sk_statistic"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="532dp"
            android:backgroundTint="@null"
            android:background="#E87B17"
            android:drawableLeft="@drawable/button_drawable"
            android:text="統計資訊"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <Button
            android:id="@+id/btn_sk_modifyMenu"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@null"
            android:background="#E87B17"
            android:drawableLeft="@drawable/button_drawable"
            android:text="編輯菜單"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sk_modifyInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>