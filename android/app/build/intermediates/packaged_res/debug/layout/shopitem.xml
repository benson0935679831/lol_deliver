<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"><![CDATA[

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                ]]>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/iv_sk_shopIcon"
                        android:layout_width="match_parent"
                        android:layout_height="178dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/zhujian" />

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/like" />
                </androidx.cardview.widget.CardView>

                <!-- 註解掉失敗的圓角-->
                <!--            <View-->
                <!--                android:layout_width="335dp"-->
                <!--                android:layout_height="180dp"-->
                <!--                android:layout_centerInParent="true"-->
                <!--                android:background="@drawable/round_corner" />-->

            </FrameLayout>

            <TextView
                android:id="@+id/tv_shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="築間幸福鍋物 台中逢甲店"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shopDetail"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20-30分鐘•30.00TWD"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="10dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/star_1" />

                <TextView
                    android:id="@+id/tv_shopStar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:rotation="0"
                    android:text="4.8"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>