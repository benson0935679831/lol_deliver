<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainTheme_color"
    android:onClick="OnItemsClick"
    tools:context=".SKStatistics">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_sk_shopIcon"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/zhujian" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_sk_statistics_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/sk_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="統計資訊"
        android:textColor="@color/sk_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sk_statistics_name" />

    <ImageButton
        android:id="@+id/ib_sk_list"
        android:layout_width="155dp"
        android:layout_height="149dp"
        android:layout_marginTop="28dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/MainTheme_color"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@drawable/sk_btn1" />

    <ImageButton
        android:id="@+id/ib_sk_turnover"
        android:layout_width="155dp"
        android:layout_height="149dp"
        android:layout_marginTop="28dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/MainTheme_color"
        android:onClick="OnTurnoverClick"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ib_sk_list"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@drawable/sk_btn2" />

    <ImageButton
        android:id="@+id/ib_sk_items"
        android:layout_width="155dp"
        android:layout_height="149dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/MainTheme_color"
        android:onClick="OnItemsClick"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_sk_list"
        app:srcCompat="@drawable/sk_btn3" />

    <ImageButton
        android:id="@+id/ib_sk_commit"
        android:layout_width="155dp"
        android:layout_height="149dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/MainTheme_color"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ib_sk_items"
        app:layout_constraintTop_toBottomOf="@+id/ib_sk_turnover"
        app:srcCompat="@drawable/sk_btn4" />
</androidx.constraintlayout.widget.ConstraintLayout>