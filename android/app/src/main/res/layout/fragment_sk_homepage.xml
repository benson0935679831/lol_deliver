<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SKHomepageFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MainTheme_color">

        <ScrollView
            android:layout_width="411dp"
            android:layout_height="194dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sk_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:shadowColor="@color/sk_text"
                    android:text="築間幸福鍋物 台中逢甲店"
                    android:textColor="@color/sk_text"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tx_sk_phone"
                    android:layout_width="238dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="電話     04-24511313"
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tx_sk_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="地址     407台中市西屯區逢甲路173號"
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:text="營業時間\n星期一     11:00 - 04:00\n星期二     11:00 - 04:00\n星期三     11:00 - 04:00\n星期四     11:00 - 04:00\n星期五     11:00 - 04:00\n星期六     11:00 - 04:00\n星期日     11:00 - 04:00"
                    android:textColor="@color/sk_text"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_sk_shopIcon"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/zhujian" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button2"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="420dp"
            android:drawableLeft="@drawable/button_drawable"
            android:text="修改資訊"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <Button
            android:id="@+id/button5"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="532dp"
            android:drawableLeft="@drawable/button_drawable"
            android:text="統計資訊"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <Button
            android:id="@+id/button3"
            android:layout_width="196dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/button_drawable"
            android:text="編輯菜單"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>