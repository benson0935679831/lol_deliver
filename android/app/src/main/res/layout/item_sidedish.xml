<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="8dp" android:orientation="vertical">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="match_parent" app:cardCornerRadius="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:id="@+id/tv_sideDish_cateName" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4" android:text="肉品選擇 [超值]" android:textColor="#000000" android:textSize="16sp"/>
                <TextView android:id="@+id/tv_sideDish_option" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="1 必填" android:textAlignment="viewEnd" android:textColor="@color/Orange"/>
            </LinearLayout>
            <TextView android:id="@+id/tv_sideDish_opitonDesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="選一項"/>
            <ListView android:id="@+id/lv_option" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>